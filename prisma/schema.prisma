model Milestone {
  id        String   @id @default(cuid())
  title     String
  isCompleted Boolean @default(false)
  order     Int
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model FocusSession {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime?
  duration  Int      // åˆ†é’Ÿ
  note      String?
  rating    Int?
  flowIndex Int?
  expEarned Int?
  deviceType String?
  timeBucket String?
  startHourBucket String?
  sessionLengthBucket String?
  hadDistraction Boolean @default(false)
  hadTabHide Boolean @default(false)
  hadIdle Boolean @default(false)
  hadRapidSwitch Boolean @default(false)
  resumeCount Int @default(0)
  goalMinutes Int?
  isMinMet  Boolean  @default(false)
  goalSource String?
  targetMilestoneId String?
  projectId String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startTime])
  @@index([userId, createdAt])
}

model Event {
  id             String   @id @default(cuid())
  userId         String?
  sessionId      String?
  name           String
  feature        String?
  page           String?
  action         String?
  properties     Json?
  clientTime     DateTime?
  timezone       String?
  dateKey        String
  idempotencyKey String?  @unique
  createdAt      DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, dateKey])
  @@index([name, dateKey])
  @@index([feature, dateKey])
}

model UserSession {
  id          String   @id @default(cuid())
  userId      String
  sessionId   String   @unique
  startedAt   DateTime
  endedAt     DateTime?
  durationSec Int?
  entryPage   String?
  device      String?
  timezone    String?
  dateKey     String
  hasPlan     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dateKey])
}

model DailyUserActivity {
  id            String   @id @default(cuid())
  userId        String
  dateKey       String
  firstEventAt  DateTime
  lastEventAt   DateTime
  sessionCount  Int      @default(0)
  eventCount    Int      @default(0)
  active        Boolean  @default(false)
  qualityActive Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dateKey])
  @@index([dateKey])
}

model FeatureUsageDaily {
  id        String   @id @default(cuid())
  userId    String
  dateKey   String
  feature   String
  count     Int      @default(0)
  firstAt   DateTime?
  lastAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dateKey, feature])
  @@index([feature, dateKey])
}

model Comment {
  id        String   @id @default(cuid())
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

model DailySummary {
  id                 String   @id @default(cuid())
  userId             String
  date               String   // YYYY-MM-DD
  text               String
  totalFocusMinutes  Int      @default(0)
  completedTaskCount Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shareLinks         ShareLink[]

  @@unique([userId, date])
  @@index([userId, date])
  @@index([date])
}

model ShareLink {
  id        String   @id @default(cuid())
  userId    String
  summaryId String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  summary   DailySummary @relation(fields: [summaryId], references: [id], onDelete: Cascade)

  @@index([token])
}

model WeeklyReport {
  id          String   @id @default(cuid())
  userId      String
  weekStart   DateTime
  weekEnd     DateTime
  totalMinutes Int
  wowChange   Float?
  streakDays  Int      @default(0)
  bestDay     DateTime?
  bestDayNote String?
  flowAvg     Int?
  flowDelta   Float?
  expTotal    Int?
  payloadJson Json
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([expiresAt])
}

model RecoveryQuestion {
  id         String   @id @default(cuid())
  userId     String
  question   String
  answerHash String
  salt       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Achievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  category      String
  unlockedAt    DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
  @@index([achievementId])
  @@map("achievements_unlocked")
}

model ShopPurchase {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  itemType  String
  price     Int
  createdAt DateTime @default(now())

  @@unique([userId, itemId])
  @@index([userId])
  @@map("shop_purchases")
}
